{
  "env": {
    "node": true,
    "es2021": true,
    "mocha": true
  },
  "extends": [
    "eslint:recommended"
  ],
  "parserOptions": {
    "ecmaVersion": 12,
    "sourceType": "module"
  },
  "rules": {
    "semi": [ "error", "always"],
    "quotes": [ "error", "double"],
    "indent": ["error", 2],
    "brace-style" : ["error", "1tbs"],
    "no-template-curly-in-string": "error",
    "no-unmodified-loop-condition": "error",
    "no-unreachable-loop": "error",
    "no-var": "error",
    "no-magic-numbers": "off",
    "no-shadow": "error",
    "space-infix-ops": "error"
  }
}
